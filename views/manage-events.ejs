<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/style.css">
</head>

<body class="container" style="margin-top: 50px;">

    <header class="d-flex justify-content-between align-items-center mb-4">
        <h1>Evenimente</h1>
        <div>
            <a href="/" class="btnprimary">Home</a>
            <a href="/logout" class="btndanger">Logout</a>
        </div>
    </header>

    <div class="text-center mb-4">
        <h2>Cauta si adauga evenimentul preferat!</h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/add-event" class="btn btn-primary">Add Event</a>
        <div>
            <button class="btn btn-secondary" onclick="location.href='/events/sort?order=ASC'">Sort by Price Ascending</button>
            <button class="btn btn-secondary" onclick="location.href='/events/sort?order=DESC'">Sort by Price Descending</button>
            <button onclick="location.href='/manage-events'" class="btn btn-danger">Reset Sorting</button>
        </div>
    </div>

    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
        <tr>
            <th>Eveniment</th>
            <th>Sustinator</th>
            <th>Pret</th>
            <th>Detalii</th>
        </tr>
        </thead>
        <tbody>
        <% events.forEach(event => { %>
            <tr>
                <td><b><%= event.title %></b></td>
                <td><b><%= event.speaker %></b></td>
                <td><b><%= event.price %></b></td>
                <td>
                    <a href="/view-event/<%= event.id %>" class="btn btnprimary btn-sm">View</a>
                    <a href="/edit-event/<%= event.id %>" class="btn btnprimary btn-sm">Edit</a>
                    <a href="/delete-event/<%= event.id %>" class="btn btndanger btn-sm">Delete</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>

</body>

</html>
